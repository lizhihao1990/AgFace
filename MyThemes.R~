# my themes for ggplot2

require(ggplot2)

# usage
# p <- p + theme_my - no "()" needed!

theme_my <- theme_bw() + theme(
            panel.grid.major = element_blank(), 
            panel.grid.minor = element_blank(),
            strip.background = element_rect(fill = "white"),
            legend.key       = element_blank())
